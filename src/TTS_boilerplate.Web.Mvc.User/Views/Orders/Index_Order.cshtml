@model TTS_boilerplate.Web.Models.Orders.OrderItemViewModel;
@{
    Layout = "~/Views/Shared/Layout/_Layout_Cart.cshtml";
}

@section scripts {
    <environment names="Development">
        <script src="~/view-resources/Views/Orders/index_order.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Orders/index_order.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="container">
    <form id="orderForm" asp-action="PlaceOrder" asp-controller="Orders" method="post">
        <div class="product-card">
            <div class="header">
                <h2 class="section-title">Sản phẩm</h2>
            </div>

            <div class="table-responsive">
                <table class="table-products">
                    <thead>
                        <tr>
                            <th style="width: 50%;">Sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProductList != null)
                        {
                            @for (int i=0; i < Model.ProductList.Count; i++)
                            {
                                var item = Model.ProductList[i];

                                <input type="hidden" name="Items[@i].ProductId" value="@item.ProductId"/>
                                <input type="hidden" name="Items[@i].CartId" value="@item.CartId"/>
                                <input type="hidden" name="Items[@i].ImgPath" value="@item.ProductImagePath" />
                                <input type="hidden" name="Items[@i].NameProduct" value="@item.NameProduct" />
                                
                                <input type="hidden" name="Items[@i].Price" value="@item.Price" />
                                

                                <tr class="product-row">
                                    <td>
                                        <div class="product-info">
                                            <div class="product-image" >
                                                <img src="@item.ProductImagePath"  alt="@item.NameProduct">
                                            </div>
                                            <div class="product-name" >
                                                @item.NameProduct
                                            </div>
                                        </div>
                                    </td>
                                    <td id="price" class="price-cell" data-price="@item.Price">₫@item.Price.ToString("N0")</td>
                                    <td>
                                        <div class="quantity-control d-flex align-items-center" data-product-id="@item.ProductId">
                                            <button type="button" class="btn btn-quantity btn-minus">−</button>
                                            <input type="text"
                                                id="quantity-input"
                                                name="Items[@i].Quantity"
                                                class="form-control form-control-sm mx-2 text-center quantity-input"
                                                value="@item.Quantity "
                                                min="1"
                                                data-quantity="@item.Quantity"
                                                style="width: 50px;">
                                            <button type="button" class="btn btn-quantity btn-plus">+</button>
                                        </div>
                                    </td>
                                    <td class="total-price">₫158.400</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="empty-cart">
                                <td colspan="4">
                                    <div class="text-center py-4">
                                        <i class="fa fa-shopping-cart empty-cart-icon"></i>
                                        <p>Không có sản phẩm nào</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="total-section">
                <div class="total-amount">
                    <div>Tổng số tiền (<span class="product-count">1</span> sản phẩm): 
                        <span class="total-all-product">₫0</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="customer-info">
            <h3 class="section-title">Thông tin người mua</h3>
            <div class="form-group">
                <label for="customerName">Họ và tên</label>
                <input type="text" id="customerName" name="CustomerInfo.Name" class="form-input" placeholder="Nhập họ và tên người mua">
            </div>
            <div class="form-group">
                <label for="customerPhone">Số điện thoại</label>
                <input type="tel" id="customerPhone" name="CustomerInfo.Phone" class="form-input" maxlength="10" placeholder="Nhập số điện thoại">
            </div>
            <div class="form-group">
                <label for="CustomerAddress">Địa chỉ</label>
                <input type="text" id="CustomerAddress" name="CustomerInfo.Address" class="form-input" placeholder="Nhập địa chỉ giao hàng">
            </div>
        </div>

        <div class="order-action">
            <button type="submit" class="order-btn">Đặt hàng</button>
        </div>
    </form>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        color: #333;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        line-height: 1.6;
    }

    .container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .section-title {
        color: #2c3e50;
        margin: 0 0 1.2rem;
        font-weight: 600;
        position: relative;
        padding-bottom: 0.5rem;
    }

    .section-title::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(to right, #1cc88a, #4e73df);
        border-radius: 2px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .product-card, .customer-info {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        margin-bottom: 1.5rem;
        padding: 1.8rem;
        transition: all 0.3s ease;
    }

    .product-card:hover, .customer-info:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table-products {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-products th {
        text-align: left;
        padding: 15px 10px;
        border-bottom: 1px solid #e0e0e0;
        color: #6c757d;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .table-products td {
        padding: 15px 10px;
        border-bottom: 1px solid #e0e0e0;
        vertical-align: middle;
    }

    .product-row:hover {
        background-color: #f9f9f9;
    }

    .product-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .product-image {
        width: 70px;
        height: 70px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-image img:hover {
        transform: scale(1.05);
    }

    .product-name {
        font-weight: 500;
        color: #2c3e50;
    }

    .price-cell {
        font-weight: 500;
        color: #555;
    }

    .quantity-control {
        display: flex;
        align-items: center;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border: 1px solid #e0e0e0;
        background: white;
        width: 118px;
    }

    .btn-quantity {
        background: #f8f9fa;
        border: none;
        color: #555;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-quantity:hover {
        background: #e9ecef;
    }

    .btn-minus {
        border-radius: 25px 0 0 25px;
    }

    .btn-plus {
        border-radius: 0 25px 25px 0;
    }

    .quantity-input {
        border: none;
        text-align: center;
        width: 40px !important;
        padding: 5px;
        font-weight: 500;
        background: white;
    }

    .total-price {
        font-weight: 600;
        color: #2278f1;
    }

    .total-section {
        display: flex;
        justify-content: flex-end;
        padding: 15px 0 0;
        margin-top: 15px;
        border-top: 1px dashed #e0e0e0;
    }

    .total-amount {
        font-size: 1rem;
        color: #343a40;
    }

    .total-all-product {
        color: #2278f1;
        font-size: 1.2rem;
        font-weight: 700;
        margin-left: 5px;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #495057;
    }

    .form-input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: all 0.3s;
        font-size: 1rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .form-input:focus {
            border-color: #2278f1;
            box-shadow: 0 0 0 3px rgb(12, 122, 222, 0.15);
        outline: none;
    }

    .form-input::placeholder {
        color: #adb5bd;
    }

    .order-action {
        text-align: center;
        margin-top: 1.5rem;
    }

    .order-btn {
        background: rgb(59 130 246);
        color: white;
        border: none;
        padding: 14px 40px;
        border-radius: 30px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 10px rgb(3 34 59 / 30%);
        transition: all 0.3s ease;
    }

    .order-btn:hover {
        transform: translateY(-2px);
            box-shadow: 0 6px 15px rgb(59,130 ,2465, 0.4);
            background: rgb(59 130 246);
    }

    .order-btn:active {
        transform: translateY(1px);
    }

    .empty-cart {
        color: #6c757d;
    }

    .empty-cart-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        opacity: 0.6;
    }

    
</style>