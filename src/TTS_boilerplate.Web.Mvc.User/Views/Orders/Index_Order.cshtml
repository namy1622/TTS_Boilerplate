@model TTS_boilerplate.Web.Models.Orders.OrderItemViewModel;
@{
  Layout = "~/Views/Shared/Layout/_Layout_Cart.cshtml";

}

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Orders/index_order.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Orders/index_order.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="container">
  <div class="header">
    <h2>Sản phẩm</h2>
    
  </div>

  <table>
    <thead>
      <tr>
        <th style="width: 50%;">Sản phẩm</th>
        <th>Đơn giá</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          
          <div class="product-info">
            <img src="@Model.Product.ProductImagePath" alt="Quạt kẹp">
            <div>
              @Model.Product.NameProduct
            </div>
          </div>
        </td>
        <td id="price" data-price="@Model.Product.Price">@Model.Product.Price</td>
        <td>
          <div class="quantity-control d-flex align-items-center" data-product-id="@Model.Product.Id">
            <button class="btn btn-outline-secondary btn-sm btn-minus">−</button>
            <input type="text"
                    id="quantity-input"
                   class="form-control form-control-sm mx-2 text-center quantity-input"
                    value="@Model.Quantity.Quantity"
                   min="1"
                   data-quantity="@Model.Quantity.Quantity"
                   style="width: 50px;">
            <button class="btn btn-outline-secondary btn-sm btn-plus">+</button>
          </div>
        </td>
        <td class="total-price">₫158.400</td>
      </tr>
    </tbody>
  </table>

  <div class="total-section">
    <div>
      <div>Tổng số tiền (1 sản phẩm): <span class="total-all-product" style="color: #ee4d2d; font-size: 18px; font-weight: bold;">0₫</span></div>
    </div>
  </div>

  <div class="customer-info">
    <h3>Thông tin người mua</h3>
    <div class="form-group">
      <label for="name">Họ và tên</label>
      <input type="text" id="name" placeholder="Nhập họ và tên người mua">
    </div>
    <div class="form-group">
      <label for="phone">Số điện thoại</label>
      <input type="tel" id="phone" placeholder="Nhập số điện thoại">
    </div>
    <div class="form-group">
      <label for="address">Địa chỉ</label>
      <input type="text" id="address" placeholder="Nhập địa chỉ giao hàng">
    </div>
  </div>

  <div style="text-align: center; margin-top: 20px;">
    <button class="order-btn" style="padding: 12px 40px; font-size: 16px;">Đặt hàng</button>
  </div>
</div>


