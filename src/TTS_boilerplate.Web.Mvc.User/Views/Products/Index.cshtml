@using TTS_boilerplate.Authorization
@using TTS_boilerplate.Category.Dto
@using TTS_boilerplate.Models

@model TTS_boilerplate.Web.Models.Products.IndexViewModel
@{
    var categories = ViewBag.Categories as List<CategoryDto>;
}
<link href="~/css/Product/index_product.css" rel="stylesheet" />
<div class="products-container">
    <div class="container product-section">
        <h2 class="section-title">@L("Product List")</h2>

        <div class="row g-4" id="ProductList">
            @* render product list *@
        </div>

        <div class="pagination-container">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center" id="pagination">
                </ul>
            </nav>
        </div>

        @*--- MODAL ---*@
        <div class="modal" id="modalCard">
            <div class="modal__overlay"></div>
            <div class="modal__card">
                <button class="modal__close" aria-label="Close modal">
                    <i class="ri-close-large-line"></i>
                </button>
                <div class="row modal__content">
                    <div class="col-lg-5 col-md-5 col-sm-12">
                        <div class="modal__image-container">
                            <img src="" alt="Product image" id="modalImage" class="modal__img">
                        </div>
                    </div>

                    <div class="col-lg-7 col-md-7 col-sm-12 modal__details align-items-start">
                        <h3 class="modal__name" id="modalName"></h3>
                        <div class="modal__price-container">
                            <span class="modal__price" id="modalPrice"></span>
                        </div>
                        <div class="modal__description">
                            <p class="modal__info" id="modalDescription"></p>
                        </div>
                        <div class="modal__buttons">
                            <a id="buyNow" data-product-id="" class="modal__button modal__button-ghost">
                                <i class="ri-shopping-bag-line"></i> Buy Now
                            </a>
                            <button id="addCart" asp-controller="Carts" data-product-id="0" class="modal__button modal__button-primary">
                                <i class="ri-shopping-cart-line"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

