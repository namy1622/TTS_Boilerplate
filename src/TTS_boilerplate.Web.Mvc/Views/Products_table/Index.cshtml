@using TTS_boilerplate.Authorization
@model TTS_boilerplate.Web.Models.Product_table.ProductListViewModel
@{

}
<link rel="stylesheet" href="~/css/Product_table/index.css" asp-append-version="true" />

@section scripts
{
    <environment names="Development">
            <script src="~/view-resources/Views/product_table/index.js" asp-append-version="true"></script>
            @* <script src="~/view-resources/Views/product_table/createProduct.js" asp-append-version="true"></script> *@
    </environment>
    <environment names="Staging, Production">
        <script src="~/view-resources/Views/product_table/index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="container_1" style="max-height:100%">


<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 " style="margin-left:50px">
                <h1 class="font-weight-bold">@L("Products")</h1>
            </div>
        </div>
    </div>
</section>

<section class="content  ">
    <div class=" ">
        <div class="row ml-3 mr-3">
            <div class="col-12">
                <div class="card ">
                    <div class="card-header ">
                        <div class="row align-items-center">
                            <div class="col-sm-7 col-md-7 align-items-center d-flex"  >

                                @if (IsGranted(PermissionNames.Products_C))
                                {
                                    <a href="javascript:;" data-toggle="modal" data-target="#ProductCreateModal" class="btn btn_create mt-3">
                                        <span>
                                            <i class="fa fa-plus-square"></i>
                                            @L("Create")
                                        </span>
                                    </a>  
                                }
                           </div>
                           
                            <div class=" col-md-5 col-sm-5  row">
                                <div class="col-1 mt-3">
                                        @await Html.PartialAsync("~/Views/Products_table/FilterForm.cshtml", Model)
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-9 ml-3">
                                        @await Html.PartialAsync("~/Views/Products_table/Index.AdvancedSearch.cshtml")
                                </div>              
                            </div>
                        </div>
                        <hr />
                        
                    </div>
                    <div class="card-body ">
                            <div class="table-responsive " >
                                <table id="ProductsTable" class="table  table-striped mdl-data-table table-bordered cell-border compact stripe hover  "
                                       style="padding: 0; border:1px solid black">
                                <thead >
                                    <tr class="">
                                        <th></th>
                                        <th>@L("NameProduct") </th>
                                        <th >@L("DescriptionProduct")</th>
                                        <th >@L("Price")</th>
                                        <th  style="width:150px">@L("CreationDate")</th>
                                        <th style="width:150px">@L("ExpirationDate")</th>
                                       
                                        <th >@L("NameCategory")</th>
                                        <th  style="width:50px">
                                            @L("ProductImage")
                                        </th>

                                        <th name="Actions" style="width:50px"></th>
                                       
                                       
                                    </tr>
                                </thead>
                                
                                <tbody></tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

 @await Html.PartialAsync("~/Views/Products_table/_CreateModal.cshtml",Model) 

  @* @await Html.PartialAsync("~/Views/Category/Index.cshtml") *@

<div class="modal fade" id="CategoryModal" tabindex="-1" role="dialog" aria-labelledby="CategoryModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="ProductEditModal" tabindex="-1" role="dialog" aria-labelledby="ProductEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>
</div>


<style>


    #dynamic-input {
        min-width: 200px;
    }

        #dynamic-input .form-control {
            width: 100%;
            padding: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
</style>

